<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Suite" parallel="classes">  <!-- Parallelism set to class level -->

  <test thread-count="4" name="TestingWithChrome" time-out="20000">  <!-- Timeout set to 20 seconds -->
    <parameter name="platformname" value="Windows 10"></parameter>
    <parameter name="browser" value="chrome"></parameter>
    <parameter name="browserversion" value="128.0"></parameter>  
    <parameter name="URL" value="https://www.lambdatest.com/selenium-playground/"></parameter>
    <classes>
      <class name="SeleniumJavaTestNGAssignment.TestScenarios"/>
    </classes>
  </test> <!-- Test -->

  <test thread-count="4" name="TestingWithEdge" time-out="20000">  <!-- Timeout set to 20 seconds -->
    <parameter name="platformname" value="macOS Ventura"></parameter>
    <parameter name="browser" value="edge"></parameter>
    <parameter name="browserversion" value="127.0"></parameter>  
    <parameter name="URL" value="https://www.lambdatest.com/selenium-playground/"/>
    <classes>
      <class name="SeleniumJavaTestNGAssignment.TestScenarios"/>
    </classes>
  </test> <!-- Test -->

  <test thread-count="4" name="TestingWithFirefox" time-out="20000">  <!-- Timeout set to 20 seconds -->
    <parameter name="platformname" value="Windows 11"></parameter>
    <parameter name="browser" value="firefox"></parameter>
    <parameter name="browserversion" value="130.0"></parameter>  
    <parameter name="URL" value="https://www.lambdatest.com/selenium-playground/"/>
    <classes>
      <class name="SeleniumJavaTestNGAssignment.TestScenarios"/>
    </classes>
  </test> <!-- Test -->

  <test thread-count="4" name="TestingWithInternetExplorer" time-out="20000">  <!-- Timeout set to 20 seconds -->
    <parameter name="platformname" value="Windows 10"></parameter>
    <parameter name="browser" value="internet explorer"></parameter>
    <parameter name="browserversion" value="11.0"></parameter>  
    <parameter name="URL" value="https://www.lambdatest.com/selenium-playground/"/>
    <classes>
      <class name="SeleniumJavaTestNGAssignment.TestScenarios"/>
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
